<Window x:Class="ENSIT.MVVMApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ENSIT MVVM Demo" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
            <TextBox Width="250" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Search customers..." />
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="8 0 0 0"/>
            <Button Content="Perf" Command="{Binding RunPerfCommand}" Margin="8 0 0 0"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Customers}" 
                  AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email, Mode=TwoWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
